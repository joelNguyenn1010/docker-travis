{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "joelnguyen/multi-client",
            "host": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "postgres",
            "image": "postgres:latest",
            "host": "postgres",
            "essential": false,
            "memory": 128
        },
        {
            "name": "redis",
            "image": "redis:latest",
            "host": "redis",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "joelnguyen/multi-server",
            "host": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "joelnguyen/multi-worker",
            "host": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "joelnguyen/multi-nginx",
            "host": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}